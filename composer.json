{
    "name": "felipe-code/mvc-base",
    "description": "A simple PHP MVC skeleton for learning and reuse.",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/",
            "Scripts\\": "scripts/"
        },
        "files": [
            "core/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Felipe",
            "email": "felipe2006.co@gmail.com"
        }
    ],
    "keywords": ["php", "mvc", "skeleton", "framework", "router"],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "twig/twig": "^3.23"
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public",
        "post-create-project-cmd": [
            "Scripts\\Setup::postCreateProject"
        ]
    }
}
